<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @article %>
      
      <%= form_with model: @article, class:"shadow p-3 mb-3 bg-info bg-body-tertiary rounded", local: true do |f| %>
        <div class="form-group row mb-4">
          <%= f.label :title, class: "col-2 col-form-label text-light" %><br/>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow-rounded", placeholder: "Title of article" %>
          </div>
        </div>

        <div class="form-group row mb-4">
          <%= f.label :description , class: "col-2 col-form-label text-light" %><br/>
          <div class="col-10">
            <%= f.text_area :description, rows: 10, class:"form-control shadow-rounded", placeholder: "Description of article" %>
          </div>
        </div> 

        <div class="form-group row mb-4">
          <%= f.label :category , class: "col-2 col-form-label text-light" %><br/>
          <div class="col-10">
            <%= f.select :category_ids, Category.order(:name).map { |category| [category.name, category.id] }, { prompt: "Make your selection from the list below (can be empty)" }, { multiple: true, size: 2, class: "form-select shadow rounded" } %>
          </div>
        </div> 

        <div class="form-group row col-4 justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>

    <%= link_to '[ Cancel and return to articles listing ]', articles_path(@article), class: "text-center text-info" %>
  </div>
</div>